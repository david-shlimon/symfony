{% extends 'base.html.twig' %}

{% block title %}MonBlog{% endblock %}


{% block body %}


    <div class="container-fluid">

        <div class="row">

          {% for post in posts %}
          
              <div class="col-md-4 mb-5">
              <div class="card" style="width: 22rem;">
              <a href="/post/{{post.id}}">
                <img class="card-img-top" src="{{post.artpic }}" alt="Card image cap">
                  </a>
                <div class="card-body">
                  <h5 class="card-title">{{post.title}}</h5>
                  <p class="card-text">{{post.arttext}}</p>
                  <p>{{post.artdate | date("d/m/Y")}} </p>
                </div>
              </div>
              </div>

            
          {% endfor %}
</div>
</div>


{% endblock %}
